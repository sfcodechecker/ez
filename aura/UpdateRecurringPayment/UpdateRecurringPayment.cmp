<aura:component implements="force:lightningQuickActionWithoutHeader,force:hasRecordId,lightning:actionOverride" controller="UpdateRecurringPaymentController" extends="c:MessageHandler">
<!-- attributes -->
<aura:attribute name="GatewayName" type="String"/> 
<aura:attribute name="RecurringDtails" type="Recurring_Payment__c"/>   
<aura:attribute name="FrequencyList" type="List" />
<aura:attribute name="SelectedInstalmentDate" type="String" /> 
<aura:attribute name="MinimumInstalmentDate" type="String" /> 
<aura:attribute name="showSpinner" type="Boolean" default="false" />
<aura:attribute name="recordId" type="String" /> 
<aura:attribute name="contactInfo" type="String" />
<aura:attribute name="showModel" type="Boolean" default="false" />
<aura:attribute name="ChargeAmount" type="Double" /> 

<!-- handler methods -->
<aura:handler name="init" value="{!this}" action="{!c.doInit}" />

<aura:if isTrue="{!v.showSpinner}">
<lightning:spinner alternativeText="loading..." variant="brand" size="medium" />
</aura:if>
<!--Style-->

<aura:if isTrue="{!v.showModel}">

<header class="slds-modal__header"> 
    <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">Update Recurring Payment</h2> 
</header>
<!-- Modal Start -->  
<div class="slds-modal__content" style="height : auto;">           
            <lightning:input type="number" label="Amount" value="{!v.RecurringDtails.Q_Charge__Amount__c}" required="true" formatter="currency" step="0.01"/>
            <br/>
            <lightning:combobox label="Installment Period" options="{!v.FrequencyList}" required="true" value="{!v.RecurringDtails.Q_Charge__Installment_Period__c}" onchange="{!c.handleFrequencyChange}" />
            <br/>
            <lightning:input type="date" name="Instalment Date" label="Installment Date" required="true" value="{!v.RecurringDtails.Q_Charge__Next_Installment_Date__c}" min="{!v.MinimumInstalmentDate}" />                
            <br/>         
            <br/>
    </div>
    <footer class="slds-modal__footer">
        <div>
            <lightning:button variant="neutral"  label="Cancel" title="Cancel" onclick="{! c.closeModel }"/>  
            <lightning:button variant="brand"    label="Update" title="Update" onclick="{! c.updateRP }"/>
        </div>
    </footer> 
</aura:if>
<!-- Modal End -->
</aura:component>